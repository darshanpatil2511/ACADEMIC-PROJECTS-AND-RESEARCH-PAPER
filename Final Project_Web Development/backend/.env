# Server Configuration
PORT=5009                          # Port for the backend server

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/carelink  # Connection string for MongoDB

# JWT Configuration
JWT_SECRET=your_jwt_secret         # Secret key for signing JWTs
JWT_EXPIRY=1h                      # Optional: Token expiration time for added security (e.g., 1h, 2d, etc.)

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key     # Stripe secret key for processing payments
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret # Optional: Webhook secret for secure validation

# Environment Identifier
NODE_ENV=development               # Change to 'production' when deploying to production

# Logging Configuration
LOG_LEVEL=info                     # Optional: Logging level (e.g., debug, info, warn, error)

